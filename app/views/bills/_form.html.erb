<%= form_for @bill, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
  <%= f.label :name, class: "col-md-2" %>
  <div class="col-md-4">
    <%= f.text_field :name, class: "form-control", placeholder: 'Name of bill' %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Due Date", class: "col-md-2" %>
  <div class="col-md-4">
    <%= f.date_select :due_date, ampm: true, :discard_year => true, class: "form-control" %>
  </div>
</div>

<%= f.select_recurring :due_date %>


<div class="form-group">
  <%= f.label "Remind me", class: "col-md-2" %>
  <div class="col-md-4">
    <%= f.date_select :reminder, :discard_year => true, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :phone_number, class: "col-md-2" %>
  <div class="col-md-4">
    <%= f.text_field :phone_number, class: "form-control", placeholder: 'ex: 8475551234' %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Notes", class: "col-md-2" %>
  <div class="col-md-8">
    <%= f.text_area :notes, class: "form-control", size: '4x6', placeholder: 'Add any notes for yourself, such as when to take the meatloaf out of the oven...' %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-8">
    <%= f.hidden_field :user_id, value: "#{current_user.id}", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-8">
    <%= f.submit class: 'btn btn-primary btn-sm' %>
  </div>
</div>
<% end %>
